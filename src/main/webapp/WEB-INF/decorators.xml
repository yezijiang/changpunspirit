<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/decorators">
    <!-- 此处用来定义不需要过滤的页面 -->
    <excludes>
        <pattern>**/*.css</pattern>
        <pattern>**/*.js</pattern>
        <pattern>**/login.htm</pattern>
    </excludes>
    <!-- 用来定义装饰器要过滤的页面 -->
    <decorator name="default" page="default.jsp">
        <pattern>/*.htm</pattern>
    </decorator>
</decorators>